<body>

<div class="section">
	<div class="container" style="padding-top:55px;">
			<div class="row">
				<div class="col-md-4">
	    	 		<div class="well profile">
	            		<div class="col-md-12">
	                  		<div class="col-md-4 text-center">
	                    		<figure>
	                        		<img src="https://res.cloudinary.com/closebrace/image/upload/w_400/v1491315007/usericon_id76rb.png" alt="" class="img-circle img-responsive">
	                    		</figure>
	                  		</div>

	             		   <div class="col-md-8 text-right">
	             		   		<div class = "box">
									<h1>Your details:</h1>
									<p><strong>Username:</strong><%= @user.username %></p>
									<p> Usertype: Client </p>
									<p>Name: <%= @client.fName %> <%= @client.lName %></p>
									<p>Gender: <%= @client.gender%></p>
									<p>Birthday (mm/dd/yyyy): <%= @client.birth_month %>/<%= @client.birth_day %>/<%= @client.birth_year %></p>
									<p>Address: <%= @client.address%></p>
									<p>Apartment number: <%= @client.apt_no%></p>
									<p>City: <%= @client.city%></p>
									<p>Province: <%= @client.province%></p>
									<p>Country: <%= @client.country%></p>
									<p>Postal Code: <%= @client.postal_code%></p>
								</div>
	                		</div>             
	            		</div>            
	            	<div class="col-md-12 divider text-center">
	            	<row>
	                	<div class="col-md-3 emphasis">
	                    	<button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span>New payment</button>
	               		</div>
	               		<div class="col-md-3 emphasis">
	                    	<button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span>New endorsement</button>
	               		</div>
	                <!-- if needed as a spacer <div class="col-md-2"></div> -->
	               	<div class="col-md-2 emphasis">
		               	<%= link_to(new_job_path) do %>
		                	<button class="btn btn-info btn-block"><span class="fa fa-plus"></span>New Job</button>
		                <% end %>
		            </div>
	                <div class="col-md-2 emphasis">
	                    <button class="btn btn-info btn-block"><span class="fa fa-gear"></span>Manage Jobs</button>
	                </div>
	                <div class="col-md-2 emphasis">
	                    <%= link_to(edit_user_client_path(@user.id, @client.id)) do %>
	                    	<button type="button" class="btn btn-info btn-block"><span class="fa fa-gear"></span>Edit Profile</button>
	                    <% end %>
	                </div>
	            </row>
	            

	            <row>
	                <div class="section">
	                    <div class="padding-top">

	                    <!-- Ongoing Jobs -->
	                        <div class="col-md-12">
	                          <div class="panel-group" id="accordion">
	                              <div class="panel panel-primary">
	                                  <div class="panel-heading">
	                                    <h4 class="panel-title">
	                                      <a href="#collpase1" data-toggle="collapse" data-parent="accordion">Ongoing Jobs</a>
	                                    </h4>
	                                </div>
	                                  <div id="collpase1" class="panel-collapse collapse in">
	                                    <div class="panel-body">
	                                        <section class="align-box">
	                                      </section>
	                                    </div>
	                                  </div>
	                              </div>
	                          </div>
	                        </div>
	                        <!-- end -->

	                        <!-- Recently completed Jobs -->
	                        <div class="col-md-12">
	                          	<div class="panel-group" id="accordion">
	                              	<div class="panel panel-primary">
	                                  	<div class="panel-heading">
	                                    	<h4 class="panel-title">
	                                      		<a href="#collpase2" data-toggle="collapse" data-parent="accordion">Recent Jobs</a>
	                                    	</h4>
	                                	</div>
	                                	<div id="collpase2" class="panel-collapse collapse in">
	                                    	<div class="panel-body">
	                                        	<section class="align-box">
	                                      		</section>
	                                    	</div>
	                                  	</div>
	                              	</div>
	                          	</div>
	                        </div>
	                        <!-- end -->


	                   	<!-- enclosing tags -->
	                	</div>
	              	</div>
	            </row>
	            </div>
	    	 </div>                 
			</div>
		</div>
	</div>
</div>
<!-- enclosing tags -->

