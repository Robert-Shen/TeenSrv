
<h1>Listing Usernames</h1>
<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
    <th>Type of User</th>
    <th colspan="3"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.password %></td>
      <% if user.usertype == 0 %>
        <td>Teen</td>
      <% elsif user.usertype == 1 %>
        <td>Client</td>
      <% else %>
      <%= user.usertype %>
      <% end %>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>