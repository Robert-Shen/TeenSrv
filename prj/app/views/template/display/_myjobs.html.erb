<div class="container">
	<div class="row">
		<section class="content">
			<h1>My Jobs</h1>
			<div class="col-md-8 col-md-offset-2">
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="table-container">
							<table class="table table-filter">
								<tbody>
									<% if @jobs %>
 										<% @jobs.each do |job| %>
	 										<tr data-status="pending">
	 											<% if(job.accepted == false && job.cancelled == false && job.finished == false) %>
													<td>
														<div class="media">
															<div class="media-body">
																<span class="media-meta pull-right"> <%= job.created_at %></span>
																<h4 class="title">
																	<%= link_to(job_path(job)) do %>
																		Job Type: <%= JobType.find(job.job_type_id).name %>
																	<% end %>
																	<span class="pull-right pending">(Pending)</span>
																</h4>
																<h5>Offered By: <%= Client.find(job.client_id).fName %> <%= Client.find(job.client_id).lName %></h5>
																<p>Start Time: <%= job.starttime %> Finish Time: <%= job.finishtime %> for a total of <%= job.hours %> hours </p>
																<p class="summary">Brief Summary:<%= job.description %></p>
															</div>
														</div>
													</td>
												<% end %>
											</tr>
											<tr data-status="accepted">
												<% if(job.accepted == true && job.cancelled == false && job.finished == false) %>
													<td>
														<div class="media">
															<div class="media-body">
																<span class="media-meta pull-right"><%= job.created_at %></span>
																<h4 class="title">
																	<%= link_to(job_path(job)) do %>
																		Job Type: <%= JobType.find(job.job_type_id).name %>
																	<% end %>
																	<span class="pull-right accepted">(Accepted)</span>
																</h4>
																<h5>Offered By: <%= Client.find(job.client_id).fName %> <%= Client.find(job.client_id).lName %></h5>
																<p>Start Time: <%= job.starttime %> Finish Time: <%= job.finishtime %> for a total of <%= job.hours %> hours </p>
																<p class="summary">Brief Summary:<%= job.description %></p>
															</div>
														</div>
													</td>
												<% end %>
											</tr>
											<tr data-status="cancelled">
												<% if(job.cancelled == true) %>
													<td>
														<div class="media">
															<div class="media-body">
																<span class="media-meta pull-right"><%= job.created_at %></span>
																<h4 class="title">
																	<%= link_to(job_path(job)) do %>
																		Job Type: <%= JobType.find(job.job_type_id).name %>
																	<% end %>
																	<span class="pull-right cancelled">(Cancelled)</span>
																</h4>
																<h5>Offered By: <%= Client.find(job.client_id).fName %> <%= Client.find(job.client_id).lName %></h5>
																<p>Start Time: <%= job.starttime %> Finish Time: <%= job.finishtime %> for a total of <%= job.hours %> hours </p>
																<p class="summary">Brief Summary:<%= job.description %></p>
															</div>
														</div>
													</td>
												<% end %>
											</tr>
											<tr data-status="finished">
												<% if(job.cancelled == false && job.finished == true) %>
													<td>
														<div class="media">
															<div class="media-body">
																<span class="media-meta pull-right"><%= job.created_at %></span>
																<h4 class="title">
																	<%= link_to(job_path(job)) do %>
																		Job Type: <%= JobType.find(job.job_type_id).name %>
																	<% end %>
																	<span class="pull-right finished">(Finished)</span>
																</h4>
																<h5>Offered By: <%= Client.find(job.client_id).fName %> <%= Client.find(job.client_id).lName %></h5>
																<p>Start Time: <%= job.starttime %> Finish Time: <%= job.finishtime %> for a total of <%= job.hours %> hours </p>
																<p class="summary">Brief Summary:<%= job.description %></p>
															</div>
														</div>
													</td>
												<% end %>
											</tr>

										<% end %>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
			<div class="col-sm-3 col-md-2 well">
				<span>
		            <button type="button" class="btn btn-default btn-filter" data-target="all">All</button>
		            <hr>
					<button type="button" class="btn btn-success btn-filter" data-target="accepted"> Accepted</button>
					<button type="button" class="btn btn-warning btn-filter" data-target="pending">Pending</button>
					<button type="button" class="btn btn-danger btn-filter" data-target="cancelled">Cancelled</button>
					<button type="button" class="btn btn-filter" data-target="finished">Finished</button>
				</span>
			</div>


		</section>
	</div>
</div>