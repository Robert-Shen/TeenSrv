<div class="container">
	<div class="row">
    <div class="col-md-12">
      <h4>Teenagers' Applications</h4>
        <div class="table-responsive">     
            <table id="mytable" class="table table-bordred table-striped">    
              <thead>
             
                <th>Job Type</th>
                <th>Description</th>
                <th>Start Time</th>
                <th>Finish Time</th>
                <th>Edit</th>
                <th>Teenager Name</th>

              </thead>
              <tbody>
				<% @applications.each do |appl| %>
					<% if(appl.job.cancelled == false && appl.job.finished == false && appl.job.accepted == false) %>
						<tr>
							<td><%= JobType.find(appl.job.job_type_id).name %></td>
							<!-- job.job_type.name gives us SQLite exception, it should work but doesn't-->
							<td><%= appl.job.description %></td>   
							<td><%= appl.job.starttime %></td>
							<td><%= appl.job.finishtime %></td>
							<td>
							<%= link_to(job_path(appl.job)) do %>
								<button class="btn btn-primary btn-xs"><span class="fa fa-info-circle"></span></button>
							<% end %>
							</td>
							<td><%= appl.teenager.firstname %> <%= appl.teenager.lastname %></td>
							<td>
								<%= form_with url: accept_jobs_path, local: true do |form| %>
			            			<%= form.hidden_field :apply_job_id, :value => appl.id %>
			                		<button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Accept</button>
				                <% end %>
				            </td>
						</tr>
					<% end %>
                <% end %>
              </tbody>
                  
            </table>


            <div class="clearfix"></div>
            <ul class="pagination pull-right">
              <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
              <li class="active"><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
            </ul>
                
          </div>
            
        </div>
	   </div>
  </div>


<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
      <div class="modal-dialog">
    <div class="modal-content">
          <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
      </div>
          <div class="modal-body">
          <div class="form-group">
        <input class="form-control " type="text" placeholder="Mohsin">
        </div>
        <div class="form-group">
        
        <input class="form-control " type="text" placeholder="Irshad">
        </div>
        <div class="form-group">
        <textarea rows="2" class="form-control" placeholder="CB 106/107 Street # 11 Wah Cantt Islamabad Pakistan"></textarea>
    
        
        </div>
      </div>
          <div class="modal-footer ">
        <button type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
      </div>
        </div>
    <!-- /.modal-content --> 
  </div>
      <!-- /.modal-dialog --> 
    </div>
    
    
    
    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
      <div class="modal-dialog">
    <div class="modal-content">
          <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
      </div>
          <div class="modal-body">
       
       <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>
       
      </div>
        <div class="modal-footer ">
        <button type="button" class="btn btn-success" ><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
      </div>
        </div>
    <!-- /.modal-content --> 
  </div>
      <!-- /.modal-dialog --> 
</div>
