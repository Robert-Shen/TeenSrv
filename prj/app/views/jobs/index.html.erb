<p>Viewing as: 
  <strong><%= current_user.username %></strong>
</p><br/>
<h1>Job Board</h1>

<table>
  <tr>
    <th colspan="1"></th>
  </tr>
   <% @jobs.each do |job| %>
    <tr>
      <td><%= job.description %></td>      
      <td><%= job.amount %></td>
      <td><%= job.hours %></td>
      <td><%= job.starttime %></td>
      <td><%= job.finishtime %></td>
      <td>Accepted By: <%= job.teenager_id %></td>
      <td>Offered By: <%= Client.find(job.client_id).user.username %></td>

      <% if current_user.usertype == 1 %> 
      <td><%= link_to 'Show', job_path(job, :user => current_user.id) %></td><br/>
      <% end %>
      <td><%= link_to 'Destroy', job_path(job),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>

<% if current_user.usertype == 1 %> 
  <br/><td><%= link_to 'Create new job', new_job_path %></td><br/>
<% end %>

<% if current_user.usertype == 0 %> 
  <%= link_to 'My Offered Jobs', jobs_myjob_path(:user => current_user.id) %>
<% else %>
  <%= link_to 'My Requested Jobs', jobs_myjob_path(:user => current_user.id) %>
<% end %>
<br/><%= link_to 'Back', user_path(current_user) %>