<head>
<%= stylesheet_link_tag 'style1' %>
</head>

<div class="box">

<%= form_with(model: @job, local: true) do |form| %>


  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@job.errors.count, "error") %> prohibited
        this job from creation
      </h2>
      <ul>
        <% @job.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= hidden_field_tag "user", current_user.id %>
  <div class="row">
  <p>
    <%= form.label :name %><br>
    <%= form.select :name, File.readlines(Rails.root + "app/views/JobNames.txt").each {|line| [line, line]} %>
  </p>
  </div>
  <div class="row">
  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>
  </div>
 <div class="row">
 <div class="col-half">
  <p>
    <%= form.label :amount %><br>
    $<%= form.text_area :amount %>
  </p>
 </div>
 <div class="col-half">
  <p>
    <%= form.label :hours %><br>
    <%= form.text_field :hours %>
  </p>
  </div>
 </div>
 <div class="row">
 <div class="col-half">
  <p>
    <%= form.label :starttime %><br>
    <%= form.datetime_local_field :starttime %>
  </p>
 </div>
 <div class="col-half">
  <p>
    <%= form.label :finishtime %><br>
    <%= form.datetime_local_field :finishtime %>
  </p>
  </div>
  </div>
  <p>
    <%= form.submit %>
  </p>
 <% end %>
 </div>