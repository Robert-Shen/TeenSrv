<%= form_with(model: @job, local: true) do |form| %>


  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@job.errors.count, "error") %> prohibited
        this job from creation
      </h2>
      <ul>
        <% @job.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= hidden_field_tag "user", @user.id %>
  <p>
    <%= form.label :name %><br>
    <%= form.select :name, File.open("JobNames.txt").each {|line| [line, line]} %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>
 
  <p>
    <%= form.label :amount %><br>
    <%= form.text_area :amount %>
  </p>
 
  <p>
    <%= form.label :hours %><br>
    <%= form.text_field :hours %>
  </p>
 
  <p>
    <%= form.label :starttime %><br>
    <%= form.text_field :starttime %>
  </p>
 
  <p>
    <%= form.label :finishtime %><br>
    <%= form.text_field :finishtime %>
  </p>
  <p>
    <%= form.submit %>
  </p>
 <% end %>